{#
/**
 * @file
 * Template para notificaciones banner administrativas.
 *
 * Variables disponibles:
 * - title: Título de la notificación.
 * - message: Mensaje de la notificación.
 * - type: Tipo de severidad (info, warning, error, success).
 * - notification_id: ID de la notificación.
 */
#}
<div class="admin-notification-banner admin-notification-banner--{{ type }}" data-notification-id="{{ notification_id }}" role="alert">
  <div class="admin-notification-banner__content">
    <div class="admin-notification-banner__icon">
      {% if type == 'error' %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
      {% elseif type == 'warning' %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
          <line x1="12" y1="9" x2="12" y2="13"></line>
          <line x1="12" y1="17" x2="12.01" y2="17"></line>
        </svg>
      {% elseif type == 'success' %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      {% else %}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
      {% endif %}
    </div>
    <div class="admin-notification-banner__message">
      {% if title %}
        <div class="admin-notification-banner__title">{{ title }}</div>
      {% endif %}
      <div class="admin-notification-banner__text">{{ message }}</div>
    </div>
    <button class="admin-notification-banner__close" data-dismiss-notification="{{ notification_id }}" aria-label="{{ 'Cerrar notificación'|t }}">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>
